<script>
	import * as THREE from 'three';

	// Step 1: Load the JSON data
	fetch('/stars.json')
		.then(response => response.json())
		.then(data => {
			const starCanvas = document.getElementById('stars');

			const maxZ = Math.max(...data.map(star => star[2]));
			const minZ = Math.min(...data.map(star => star[2]));

			const scene = new THREE.Scene();
			scene.background = new THREE.Color(0x481d52);

			const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
			camera.position.z = 50;
			camera.up.set(0, 1, 0);

			starCanvas.style.opacity = 1;

			const renderer = new THREE.WebGLRenderer({
				canvas: starCanvas,
			});
			renderer.setSize(window.innerWidth, window.innerHeight);
			renderer.setPixelRatio(window.devicePixelRatio || 1);

			const geometry = new THREE.BufferGeometry();
			const vertices = [];
			const opacities = [];
			const sizes = [];

			for (let i = 0; i < data.length; i++) {
				const [x, y, z, lum] = data[i];
				vertices.push(x, y, z);

				const opacity = 0.15 + (z - minZ) / (maxZ - minZ) * 0.85;
				opacities.push(opacity);

				const size = Math.max(0.005, Math.min(0.1, 0.02 * Math.pow(Math.abs(lum), 0.3)));
				sizes.push(size);
			}

			geometry.setAttribute('position', new THREE.Float32BufferAttribute(vertices, 3));
			geometry.setAttribute('alpha', new THREE.Float32BufferAttribute(opacities, 1));
			geometry.setAttribute('size', new THREE.Float32BufferAttribute(sizes, 1));

			const vertexShader = `
attribute float alpha;
attribute float size;
varying float vAlpha;
varying vec3 vPosition;

void main() {
  vAlpha = alpha;
  vPosition = position;
  vec4 mvPosition = modelViewMatrix * vec4(position, 1.0);
  gl_PointSize = size * 50.0;
  gl_Position = projectionMatrix * mvPosition;
}
`;

			const fragmentShader = `
uniform sampler2D uTexture;
uniform float uTime;
varying float vAlpha;
varying vec3 vPosition;

void main() {
  // Subtle twinkling effect based on position and time
  float twinkle = sin(uTime * 0.8 + vPosition.x * 0.1) *
                  sin(uTime * 0.6 + vPosition.y * 0.1) *
                  sin(uTime * 0.9 + vPosition.z * 0.1);
  twinkle = 0.85 + twinkle * 0.15; // Range: 0.7 to 1.0

  gl_FragColor = texture2D(uTexture, gl_PointCoord);
  gl_FragColor.a *= vAlpha * twinkle;
}
`;

			const shaderMaterial = new THREE.ShaderMaterial({
				uniforms: {
					uTexture: { value: new THREE.TextureLoader().load('/star.png') },
					uTime: { value: 0.0 },
				},
				vertexShader: vertexShader,
				fragmentShader: fragmentShader,
				transparent: true,
			});

			const stars = new THREE.Points(geometry, shaderMaterial);
			scene.add(stars);

			// Mouse tracking with target and current values for smooth interpolation
			let targetMouse = new THREE.Vector2(0, 0);
			let currentMouse = new THREE.Vector2(0, 0);

			window.addEventListener('mousemove', (event) => {
				targetMouse.x = (event.clientX / window.innerWidth) * 2 - 1;
				targetMouse.y = (event.clientY / window.innerHeight) * 2 - 1;
			}, false);

			// Camera orbital parameters
			let theta = 0; // horizontal angle (azimuth)
			let phi = Math.PI / 2; // vertical angle (polar) - start at equator
			let targetTheta = 0;
			let targetPhi = Math.PI / 2;
			const radius = 50; // distance from origin

			// Auto-rotation for ambient movement
			let autoRotation = 0;
			const autoRotationSpeed = 0.00005;

			// Animation timing
			let lastTime = performance.now();

			function animate() {
				requestAnimationFrame(animate);

				const currentTime = performance.now();
				const deltaTime = Math.min((currentTime - lastTime) / 16.67, 3); // Normalize to 60fps, cap at 3x
				lastTime = currentTime;

				// Check if the user prefers reduced motion
				const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

				if (!prefersReducedMotion) {
					// Smooth mouse interpolation (easing)
					const mouseLerp = 1 - Math.pow(0.85, deltaTime);
					currentMouse.x += (targetMouse.x - currentMouse.x) * mouseLerp;
					currentMouse.y += (targetMouse.y - currentMouse.y) * mouseLerp;

					// Auto-rotation adds gentle constant drift
					autoRotation += autoRotationSpeed * deltaTime;

					// Mouse controls camera direction
					// X movement = horizontal rotation (theta)
					// Y movement = vertical rotation (phi)
					const sensitivity = 0.004;
					targetTheta = autoRotation + currentMouse.x * sensitivity * 50;
					targetPhi = Math.PI / 2 + currentMouse.y * sensitivity * 25;

					// Smooth camera angle interpolation
					const cameraLerp = 1 - Math.pow(0.92, deltaTime);
					theta += (targetTheta - theta) * cameraLerp;
					phi += (targetPhi - phi) * cameraLerp;

					// Clamp phi to avoid gimbal lock (keep away from poles)
					phi = Math.max(0.3, Math.min(Math.PI - 0.3, phi));

					// Convert spherical to Cartesian coordinates for camera position
					const x = radius * Math.sin(phi) * Math.sin(theta);
					const y = radius * Math.cos(phi);
					const z = radius * Math.sin(phi) * Math.cos(theta);

					// Update camera position and look at origin
					camera.position.set(x, y, z);
					camera.lookAt(0, 0, 0);
				}

				// Update time uniform for twinkling
				shaderMaterial.uniforms.uTime.value = currentTime * 0.001;

				renderer.render(scene, camera);
			}

			animate();

			window.addEventListener('resize', function () {
				const newWidth = window.innerWidth;
				const newHeight = window.innerHeight;

				// Update the camera's aspect ratio based on the new dimensions
				camera.aspect = newWidth / newHeight;
				camera.updateProjectionMatrix();

				// Resize the renderer's viewport and canvas
				renderer.setSize(newWidth, newHeight);
			});
		})
		.catch(error => {
			console.error('Error loading JSON:', error);
		});
</script>